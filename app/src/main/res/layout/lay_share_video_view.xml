<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/app_color">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_selector"
            android:padding="15dp"
            android:src="@drawable/back_unpresed" />

        <TextView
            android:id="@+id/tvVideolistname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Watch video"
            android:textColor="@color/white"
            android:textSize="@dimen/header_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnShare"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_selector"
                android:padding="15dp"
                android:src="@drawable/share_unpresed" />

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/btn_selector"
                android:padding="15dp"
                android:src="@drawable/btn_delete_selector" />
        </LinearLayout>
    </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/tab">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_videoplayer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <VideoView
                        android:id="@+id/vvScreen"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5.0dip"
                    android:background="@drawable/seekbar_bg"
                    android:orientation="horizontal"
                    android:weightSum="9.0">

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="left"
                        android:layout_weight="1.0">

                        <Button
                            android:id="@+id/btnPlay"
                            android:layout_width="35.0dip"
                            android:layout_height="35.0dip"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:background="@drawable/play"
                            android:layout_marginLeft="10dp"
                            android:gravity="center" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.5">

                        <TextView
                            android:id="@+id/left_pointer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="5.0dip"
                            android:gravity="center"
                            android:text="--" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="5.0">

                        <SeekBar
                            android:id="@+id/sbVideo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:maxHeight="3.0dip"
                            android:minHeight="3.0dip"
                            android:paddingLeft="@dimen/default_margin"
                            android:paddingRight="@dimen/default_margin"
                            android:progressDrawable="@drawable/thumblerseek1"
                            android:thumb="@drawable/seekbar_thumb"
                            android:thumbOffset="0.0dip" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="right"
                        android:layout_weight="1.5">

                        <TextView
                            android:id="@+id/right_pointer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="5.0dip"
                            android:gravity="center"
                            android:text="--" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="0.3" />
        </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/app_color_hint" />

        <TextView
            android:id="@+id/txt_play_out"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:text="Run with other players"
            android:textColor="@color/app_color"
            android:textSize="16dp" />
    </RelativeLayout>

</RelativeLayout>